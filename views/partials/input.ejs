<div class="card">
    <h3 class="card-header">Input</h3>
    <div class="card-body">
        <form>
            <div class="form-group">
                <label for="range_channel1"><%= name %> (Value: <span id="range_channel1_value">0</span> <%= unit %>)</label>
                <input type="range" class="form-control-range" id="range_channel1" step="0.1">
            </div>
        </form>
    </div>
</div>
<script>
    $('#range_channel1').on('input change', (event) => {
        socket.emit('input', JSON.stringify({ channel: 1, value: parseFloat(event.target.value) }))
        $('#range_channel1_value').text(parseFloat(event.target.value))
    })
</script>